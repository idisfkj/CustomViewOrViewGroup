<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:auto="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.idisfkj.customvieworviewgroup.MainActivity">

    <include
        android:id="@+id/custom_viewgroup"
        layout="@layout/custom_viewgroup"/>

    <com.idisfkj.customvieworviewgroup.view.AuthCodeTextView
        android:layout_marginTop="10dp"
        android:layout_centerInParent="true"
        android:layout_below="@id/custom_viewgroup"
        android:id="@+id/autoCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        auto:autoNum="5"
        auto:autoSize="30sp" />

</RelativeLayout>
